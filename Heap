#include <bits/stdc++.h>
using namespace std;

class heap{
    public:
    
        int arr[100];
        int size;
        
        heap(){
            arr[0] = -1;
            size = 0;
        }
        
        void insert(int val){
            size += 1;
            int idx = size;
            arr[idx] = val;
            
            while(idx > 1){
                int parent = idx/2;
                
                if(arr[idx] > arr[parent]){
                    swap(arr[idx], arr[parent]);
                    idx = parent;
                }
                else return;
            }
        }
    
        void print(){
            for(int i=1; i<=size; i++){
                cout << arr[i] << " ";
            }
            cout << endl;
        }
        
        void del(){
            arr[1] = arr[size];
            size--;
            
            int idx = 1;
            while(idx < size){
                int left = 2*idx;
                int right = 2*idx+1;
                
                if(left < size && arr[idx] < arr[left]){
                    swap(arr[left], arr[idx]);
                    idx = left;
                }
                
                else if(right < size && arr[idx] < arr[right]){
                    swap(arr[right], arr[idx]);
                    idx = right;
                }
                else return;
            }
        }
};

int main()
{
    heap h;
    h.insert(50);
    h.insert(20);
    h.insert(30);
    h.insert(70);
    h.insert(60);
    h.insert(40);
    h.insert(55);
    
    h.print();
    
    h.del();
    h.print();
    

    return 0;
}
